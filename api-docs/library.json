{
    "basePath": "http://api.castcloud.org/api",
    "swaggerVersion": "1.2",
    "apiVersion": "1.0.0",
    "resourcePath": "/library",
    "apis": [
        {
            "path": "/library/casts",
            "description": "Get users subcriptions",
            "operations": [
                {
                    "method": "GET",
                    "summary": "Get users subcriptions",
                    "nickname": "Get users subcriptions",
                    "type": "Herp",
                    "parameters": [
                        {
                            "paramType": "header",
                            "name": "Authorization",
                            "type": "string",
                            "required": true,
                            "description": "clients login token"
                        }
                    ]
                },
                {
                    "method": "POST",
                    "summary": "Get users subcriptions",
                    "nickname": "Get users subcriptions",
                    "type": "Herp",
                    "parameters": [
                        {
                            "paramType": "header",
                            "name": "Authorization",
                            "type": "string",
                            "required": true,
                            "description": "clients login token"
                        },
                        {
                            "paramType": "form",
                            "name": "feedurl",
                            "type": "string",
                            "required": true,
                            "description": "URL of podcast feed"
                        }
                    ]
                }
            ]
        },
        {
            "path": "/library/casts/{tag}",
            "description": "Get users subcriptions for spesific tag",
            "operations": [
                {
                    "method": "GET",
                    "summary": "Get users subcriptions for spesific tag",
                    "nickname": "Get users subcriptions for spesific tag",
                    "type": "Herp",
                    "parameters": [
                        {
                            "paramType": "header",
                            "name": "Authorization",
                            "type": "string",
                            "required": true,
                            "description": "clients login token"
                        },
                        {
                            "paramType": "path",
                            "name": "tag",
                            "type": "string",
                            "required": false,
                            "description": "filter by tag"
                        }
                    ]
                }
            ]
        },
        {
            "path": "/library/episodes/{castid}",
            "description": "Get all episodes of a cast",
            "operations": [
                {
                    "method": "GET",
                    "summary": "Get all episodes",
                    "nickname": "Get all episodes",
                    "type": "array",
                    "items": {
                        "$ref": "episode"
                    },
                    "parameters": [
                        {
                            "paramType": "header",
                            "name": "Authorization",
                            "type": "string",
                            "required": true,
                            "description": "clients login token"
                        },
                        {
                            "paramType": "path",
                            "name": "castid",
                            "type": "integer",
                            "required": true,
                            "description": "The casts castid"
                        }
                    ]
                }
            ]
        },
        {
            "path": "/library/events",
            "description": "Add events",
            "operations": [
                {
                    "method": "POST",
                    "summary": "Add events",
                    "nickname": "Add events",
                    "type": "Herp",
                    "parameters": [
                        {
                            "paramType": "header",
                            "name": "Authorization",
                            "type": "string",
                            "required": true,
                            "description": "clients login token"
                        },
                        {
                            "paramType": "body",
                            "name": "json",
                            "type": "string",
                            "required": true,
                            "description": "New events (TBD)"
                        }
                    ]
                }
            ]
        },
        {
            "path": "/library/events",
            "description": "Get events",
            "operations": [
                {
                    "method": "GET",
                    "summary": "Get users tags",
                    "nickname": "Get users tags",
                    "type": "array",
                    "items": {
                        "$ref": "event"
                    },
                    "parameters": [
                        {
                            "paramType": "header",
                            "name": "Authorization",
                            "type": "string",
                            "required": true,
                            "description": "clients login token"
                        },
                        {
                            "paramType": "query",
                            "name": "since",
                            "type": "integer",
                            "required": false,
                            "description": "timestamp of last call"
                        },
                        {
                            "paramType": "query",
                            "name": "ItemID",
                            "type": "integer",
                            "required": false,
                            "description": "filter by ItemID"
                        }
                    ]
                }
            ]
        },
        {
            "path": "/library/newepisodes",
            "description": "Get new episodes",
            "operations": [
                {
                    "method": "GET",
                    "summary": "Get new episodes",
                    "nickname": "Get new episodes",
                    "type": "newepisodesresult",
                    "parameters": [
                        {
                            "paramType": "header",
                            "name": "Authorization",
                            "type": "string",
                            "required": true,
                            "description": "clients login token"
                        },
                        {
                            "paramType": "query",
                            "name": "since",
                            "type": "integer",
                            "required": false,
                            "description": "timestamp of last call"
                        }
                    ]
                }
            ]
        },
        {
            "path": "/library/tags",
            "description": "Get users tags",
            "operations": [
                {
                    "method": "GET",
                    "summary": "Get users tags",
                    "nickname": "Get users tags",
                    "type": "Herp",
                    "parameters": [
                        {
                            "paramType": "header",
                            "name": "Authorization",
                            "type": "string",
                            "required": true,
                            "description": "clients login token"
                        }
                    ]
                }
            ]
        }
    ],
    "models": {
        "newepisodesresult": {
            "id": "newepisodesresult",
            "properties": {
                "timestamp": {
                    "description": "Timestamp for the request",
                    "type": "integer",
                    "format": "int64"
                },
                "episodes": {
                    "description": "Array of all the episodes",
                    "type": "array",
                    "items": {
                        "$ref": "episode"
                    }
                }
            },
            "required": [
                "episodes",
                "timestamp"
            ]
        },
        "episode": {
            "id": "episode",
            "properties": {
                "id": {
                    "description": "Unique identifier for the episode",
                    "type": "integer",
                    "format": "int64"
                },
                "castid": {
                    "description": "Unique identifier for the cast related to the episode",
                    "type": "integer",
                    "format": "int64"
                },
                "lastevent": {
                    "description": "The episodes last event",
                    "$ref": "event"
                },
                "feeddata": {
                    "description": "All data available in the episodes item",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "castid",
                "id"
            ]
        },
        "event": {
            "id": "event",
            "properties": {
                "type": {
                    "description": "The event type",
                    "type": "integer",
                    "format": "int64"
                },
                "episodeid": {
                    "description": "The id of the episode it relates to",
                    "type": "integer",
                    "format": "int64"
                },
                "positionts": {
                    "description": "The position where the event occured",
                    "type": "integer",
                    "format": "int64"
                },
                "clientts": {
                    "description": "The clients unix timestamp of when the event occured",
                    "type": "integer",
                    "format": "int64"
                },
                "clientname": {
                    "description": "Name of the client that sent the event",
                    "type": "string"
                },
                "clientdescription": {
                    "description": "Description of the client that sent the event",
                    "type": "string"
                }
            },
            "required": [
                "clientts",
                "episodeid",
                "positionts",
                "type"
            ]
        }
    },
    "produces": [
        "application/json"
    ]
}