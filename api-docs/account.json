{
    "basePath": "http://api.castcloud.org/api",
    "swaggerVersion": "1.2",
    "apiVersion": "1.0.0",
    "resourcePath": "/account",
    "apis": [
        {
            "path": "/account/login",
            "description": "User login.",
            "operations": [
                {
                    "method": "POST",
                    "summary": "Get access token",
                    "nickname": "Login",
                    "type": "token",
                    "parameters": [
                        {
                            "paramType": "form",
                            "name": "username",
                            "type": "string",
                            "required": true,
                            "description": "Users username"
                        },
                        {
                            "paramType": "form",
                            "name": "password",
                            "type": "string",
                            "required": true,
                            "description": "Users password"
                        },
                        {
                            "paramType": "form",
                            "name": "clientname",
                            "type": "string",
                            "required": true,
                            "description": "Client Name"
                        },
                        {
                            "paramType": "form",
                            "name": "clientdescription",
                            "type": "string",
                            "required": true,
                            "description": "Client Description. e.g. Sallys iPad"
                        },
                        {
                            "paramType": "form",
                            "name": "clientversion",
                            "type": "string",
                            "required": true,
                            "description": "Client Version"
                        },
                        {
                            "paramType": "form",
                            "name": "uuid",
                            "type": "string",
                            "required": true,
                            "description": "Universally unique identifier. String used for uniqely identifying an instanse of an application."
                        },
                        {
                            "paramType": "form",
                            "name": "apikey",
                            "type": "string",
                            "required": false,
                            "description": "Clients official apikey. Not yet implemented"
                        }
                    ],
                    "responseMessages": [
                        {
                            "code": 400,
                            "message": "Invalid username and password combination"
                        },
                        {
                            "code": 400,
                            "message": "Missing parameters"
                        },
                        {
                            "code": 500,
                            "message": "Server error"
                        }
                    ]
                }
            ]
        },
        {
            "path": "/account/ping",
            "description": "Tests if token works",
            "operations": [
                {
                    "method": "GET",
                    "summary": "Test token",
                    "nickname": "Ping",
                    "type": "void",
                    "parameters": [
                        {
                            "paramType": "header",
                            "name": "Authorization",
                            "type": "string",
                            "required": true,
                            "description": "clients login token"
                        }
                    ],
                    "responseMessages": [
                        {
                            "code": 200,
                            "message": "All ok"
                        },
                        {
                            "code": 400,
                            "message": "Bad token"
                        }
                    ]
                }
            ]
        },
        {
            "path": "/account/settings",
            "description": "Settings",
            "operations": [
                {
                    "method": "GET",
                    "summary": "Get Settings",
                    "nickname": "Get Settings",
                    "type": "array",
                    "items": {
                        "$ref": "setting"
                    },
                    "parameters": [
                        {
                            "paramType": "header",
                            "name": "Authorization",
                            "type": "string",
                            "required": true,
                            "description": "clients login token"
                        }
                    ],
                    "responseMessages": [
                        {
                            "code": 400,
                            "message": "Bad token"
                        }
                    ]
                },
                {
                    "method": "POST",
                    "summary": "Set Settings",
                    "nickname": "Set Settings",
                    "type": "void",
                    "parameters": [
                        {
                            "paramType": "header",
                            "name": "Authorization",
                            "type": "string",
                            "required": true,
                            "description": "clients login token"
                        },
                        {
                            "paramType": "body",
                            "name": "json",
                            "type": "array",
                            "required": true,
                            "description": "New or modified settings (TBD)",
                            "items": {
                                "$ref": "setting"
                            }
                        }
                    ],
                    "responseMessages": [
                        {
                            "code": 400,
                            "message": "Bad token"
                        }
                    ]
                }
            ]
        },
        {
            "path": "/account/settings/{settingid}",
            "description": "Settings",
            "operations": [
                {
                    "method": "DELETE",
                    "summary": "Delete Setting",
                    "nickname": "Delete Setting",
                    "type": "void",
                    "parameters": [
                        {
                            "paramType": "header",
                            "name": "Authorization",
                            "type": "string",
                            "required": true,
                            "description": "clients login token"
                        },
                        {
                            "paramType": "path",
                            "name": "settingid",
                            "type": "integer",
                            "required": true,
                            "description": "ID of the setting that is to be removed"
                        }
                    ],
                    "responseMessages": [
                        {
                            "code": 400,
                            "message": "Bad token"
                        }
                    ]
                }
            ]
        }
    ],
    "models": {
        "setting": {
            "id": "setting",
            "properties": {
                "settingid": {
                    "description": "The settings individual ID. Used for deleting settings.",
                    "type": "string"
                },
                "setting": {
                    "description": "Setting string. Identifies what the setting relates to.",
                    "type": "string"
                },
                "value": {
                    "description": "The value of the setting",
                    "type": "string"
                },
                "clientspesific": {
                    "description": "Whether the setting is clientspesific or not.",
                    "type": "boolean"
                }
            },
            "required": [
                "clientts",
                "setting",
                "value"
            ]
        },
        "token": {
            "id": "token",
            "properties": {
                "token": {
                    "description": "Clients autorization token",
                    "type": "string"
                }
            },
            "required": [
                "token"
            ]
        }
    },
    "produces": [
        "application/json"
    ]
}