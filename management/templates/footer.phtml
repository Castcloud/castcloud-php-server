<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script>
$(document).ready(function() {
	$(".select-userlevel").on("change", function() {
		var username = $(this).prop("id").split("-")[2];
		$.post("edit/" + username, { userlevel: this.value });
	});
});
</script>
</body>
</html>